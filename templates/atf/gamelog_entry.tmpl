{{$g := .g}}
{{$cu := .cu}}
{{$entry := .entry}}
{{$p := $entry.Player}}

<div class="gamelog-entry {{if $p}}{{$g.Color $p $cu}}{{else}}default{{end}}">
        <div class="header">
                {{$entry.PhaseName}}
                {{with $createdAt := $entry.CreatedAt}} @ {{Time $createdAt}} on {{Date $createdAt}} {{end}}
        </div>
        <hr/>
        <div class="action">
                {{$entry.HTML}}
        </div>
</div>
