{{$game := $.Game}}
{{$cp := $game.CurrentPlayer}}
{{$area := $game.SelectedArea}}
{{if $cp.CanUseScribe $area}}
<div id="tabs-use-scribe">
        <div class="dialog-content">
                <form class="myForm">
                        <input name="action" type="hidden" value="use-scribe" />
                        <div class="center">
                                <input type="submit" value="Use Scribe" class="top-padding mybutton" />
                        </div>
                </form>
        </div>
</div>
{{end}}
