{{$g := $.Game}}
<div class="available-actions-box"> 
        <fieldset>
                <legend>
                        Available
                        {{if $.ExtraAction}}
                        Extra
                        {{end}}
                        Actions
                </legend> 
                {{with $p := $g.CurrentPlayer}}
                {{if not $p.PerformedAction}}
                {{if $g.EnableActions $.CUser}}
                <div class="first-action-set">
                        <div class="player-action" id="bribe-official">
                                <div class="action-link {{if $g.EnableBribeOfficial $.CUser}}{{else}}disabled{{end}}">Bribe Official</div>
                        </div>
                        <div class="player-action" id="nominate-student">
                                <div class="action-link {{if $g.EnableNominateStudent $.CUser}}{{else}}disabled{{end}}">Nominate Student</div>
                        </div>
                        <div class="player-action" id="buy-junks">
                                <div class="action-link {{if $g.EnableBuyJunks $.CUser}}{{else}}disabled{{end}}">Buy Junks</div>
                        </div>
                        <div class="player-action" id="recruit-army">
                                <div class="action-link {{if $g.EnableRecruitArmy $.CUser}}{{else}}disabled{{end}}">Recruit Army</div>
                        </div>
                </div>
                <div class="second-action-set">
                        <div class="player-action" id="secure-official">
                                <div class="action-link {{if $g.EnableSecureOfficial $.CUser}}{{else}}disabled{{end}}">Secure Official</div>
                        </div>
                        <div class="player-action" id="force-exam">
                                <div class="action-link {{if $g.EnableForceExam $.CUser}}{{else}}disabled{{end}}">Force Exam</div>
                        </div>
                        <div class="player-action" id="start-voyage">
                                <div class="action-link {{if $g.EnableStartVoyage $.CUser}}{{else}}disabled{{end}}">Start Voyage</div>
                        </div>
                        <div class="player-action" id="invade-land">
                                <div class="action-link {{if $g.EnableInvadeLand $.CUser}}{{else}}disabled{{end}}">Invade Land</div>
                        </div>
                        <div class="player-action" id="pass">
                                <div class="action-link {{if $g.EnablePass $.CUser}}{{else}}disabled{{end}}">Pass</div>
                        </div>
                </div>
                <div class="third-action-set">
                        <div class="player-action" id="buy-gift">
                                <div class="action-link {{if $g.EnableBuyGift $.CUser}}{{else}}disabled{{end}}">Buy Gift</div>
                        </div>
                        <div class="player-action" id="transfer-influence">
                                <div class="action-link {{if $g.EnableTransferInfluence $.CUser | not}}disabled{{end}}">Transfer Influence</div>
                        </div>
                        <div class="player-action" id="commercial">
                                <div class="action-link {{if $g.EnableCommercial $.CUser}}{{else}}disabled{{end}}">Commercial</div>
                        </div>
                        <div class="player-action" id="no-action">
                                <div class="action-link {{if $g.EnableNoAction $.CUser}}{{else}}disabled{{end}}">No Action</div>
                        </div>
                        <div class="player-action" id="emperor-reward">
                                <div class="action-link {{if $g.EnableEmperorReward $.CUser | not}}disabled{{end}}">Emperor Reward</div>
                        </div>			
                </div>
                <div class="fourth-action-set">
                        <div class="player-action" id="give-gift">
                                <div class="action-link {{if $g.EnableGiveGift $.CUser}}{{else}}disabled{{end}}">Give Gift</div>
                        </div>
                        <div class="player-action" id="petition-emperor">
                                <div class="action-link {{if $g.EnablePetitionEmperor $.CUser}}{{else}}disabled{{end}}">Petition Emperor</div>
                        </div>
                        <div class="player-action" id="tax-income">
                                <div class="action-link {{if $g.EnableTaxIncome $.CUser}}{{else}}disabled{{end}}">Tax Income</div>
                        </div>
                        <div class="player-action" id="imperial-favour">
                                <div class="action-link disabled">Imperial Favour</div>
                        </div>
                </div>
                {{end}}
                {{if $g.EnableDiscard $.CUser}}
                <div class="player-action" id="discard">
                        <div class="action-link">Discard Confucius Cards</div>
                </div>
                {{end}}
                {{if $g.EnableChooseChiefMinister $.CUser}}
                <div class="player-action" id="choose-chief-minister">
                        <div class="action-link">Choose Chief Minister</div>
                </div>
                {{end}}
                {{if $g.EnableTutorStudent $.CUser}}
                <div class="player-action" id="tutor-student">
                        <div class="action-link">Tutor Student</div>
                </div>
                {{end}}
                {{if $g.EnablePlaceStudent $.CUser}}
                <div class="player-action" id="place-student">
                        <div class="action-link">Place Student</div>
                </div>
                {{end}}
                {{if $g.EnableTempTransfer $.CUser}}
                <div class="player-action" id="temp-transfer">
                        <div class="action-link">Temp Transfer</div>
                </div>
                {{end}}
                {{end}}
                {{end}}
        </fieldset> 
